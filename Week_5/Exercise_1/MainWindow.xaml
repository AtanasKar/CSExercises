<Window x:Class="Exercise_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Application" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="StartButton" 
                Content="Start Slow Work" 
                Grid.Row="0"
                Height="40"
                Margin="0,0,0,20"
                Click="StartButton_Click"/>

        <Label x:Name="StartTimeLabel" 
               Content="Start Time: Not started yet"
               Grid.Row="1"
               Margin="0,0,0,10"
               FontSize="14"/>

        <Label x:Name="NumberLabel" 
               Content="Number: -"
               Grid.Row="2"
               Margin="0,0,0,10"
               FontSize="16"
               FontWeight="Bold"
               HorizontalContentAlignment="Center"/>

        <Label x:Name="EndTimeLabel" 
               Content="End Time: Not finished yet"
               Grid.Row="3"
               Margin="0,0,0,10"
               FontSize="14"/>

    </Grid>

</Window>

